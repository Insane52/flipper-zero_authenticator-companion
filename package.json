{
  "name": "flipper-authenticator-companion",
  "version": "2.9.10",
  "private": true,
  "description": "Companion application for Flipper Authenticator software-based TOTP/HOTP authenticator for Flipper Zero device",
  "main": "src/electron.js",
  "type": "module",
  "author": "Alexander Kopachov (@akopachov)",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev pnpm run dev:all",
    "dev:all": "concurrently -n=svelte,electron -c='#ff3e00',blue \"pnpm run dev:svelte\" \"pnpm run dev:electron\"",
    "dev:svelte": "vite dev",
    "dev:electron": "electron src/electron.js",
    "build": "cross-env NODE_ENV=production pnpm run build:svelte && pnpm build:electron",
    "build:svelte": "vite build",
    "build:electron": "electron-builder --config build.config.json",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "update:icons": "node update-aegis-icons.cjs"
  },
  "browserslist": [
    "Chrome 89"
  ],
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "pnpm": ">=9.0.0",
    "node": ">=20.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.6",
    "@floating-ui/dom": "^1.6.12",
    "@serialport/bindings-interface": "^1.2.2",
    "@skeletonlabs/skeleton": "^2.10.3",
    "@skeletonlabs/tw-plugin": "^0.4.0",
    "@sveltejs/adapter-static": "3.0.6",
    "@sveltejs/kit": "2.8.5",
    "@sveltejs/vite-plugin-svelte": "^5.0.1",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.10.1",
    "@types/papaparse": "^5.3.15",
    "@types/semver": "^7.5.8",
    "@types/uuid": "^10.0.0",
    "@types/w3c-image-capture": "^1.0.10",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "async-sema": "^3.1.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "delay": "^6.0.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-reloader": "^1.2.3",
    "escape-string-regexp": "^5.0.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-svelte": "^2.46.0",
    "papaparse": "^5.4.1",
    "postcss": "^8.4.49",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.4.1",
    "prettier-plugin-svelte": "^3.3.2",
    "promise-retry": "^2.0.1",
    "protobufjs": "^7.4.0",
    "qr-scanner": "^1.4.2",
    "sass": "^1.81.0",
    "semver": "^7.6.3",
    "smart-buffer": "^4.2.0",
    "svelte": "^5.2.10",
    "svelte-check": "^4.1.0",
    "svelte-dnd-action": "^0.9.52",
    "svelte-eslint-parser": "^0.43.0",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^3.4.15",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "utc-offsets": "^1.0.0",
    "uuid": "^11.0.3",
    "vite": "^6.0.1",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-plugin-tailwind-purgecss": "^0.3.3"
  },
  "dependencies": {
    "electron-log": "^5.2.3",
    "electron-serve": "^2.1.1",
    "electron-store": "npm:electron-store-9@^9.1.2",
    "electron-updater": "^6.3.9",
    "electron-window-state": "^5.0.3",
    "serialport": "^12.0.0",
    "simple-electron-ipc": "^2.0.1"
  },
  "optionalDependencies": {
    "adm-zip": "^0.5.16",
    "yargs": "^17.7.2"
  },
  "pnpm": {
    "overrides": {
      "electron-store": "npm:electron-store-9@^9.1.2"
    }
  }
}
